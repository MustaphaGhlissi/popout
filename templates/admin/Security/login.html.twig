{% extends "admin/layout.html.twig" %}

{% block body %}
<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Espace administrateur</div>
        <div class="card-body">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path("admin_login_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="form-group">
                    <label for="email">Adresse e-mail</label>
                    <input class="form-control" type="text" aria-describedby="emailHelp" id="email" name="_username" value="{{ last_username }}" placeholder="Adresse e-mail" required="required" autocomplete="username" />
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" class="form-control" name="_password" required="required" autocomplete="current-password"  placeholder="Mot de passe"/>
                </div>

                <div class="form-group text-right">
                    <input type="submit" id="_submit" name="_submit" class="btn btn-primary" value="Se connecter" />
                </div>
            </form>
        </div>
    </div>
{% endblock %}
